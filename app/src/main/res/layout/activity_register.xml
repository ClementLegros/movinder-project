<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="297dp"
        android:layout_height="52dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="521dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="158dp"
        android:contentDescription="Renseignez votre numéro de téléphone"
        android:ems="10"
        android:hint="Phone"
        android:importantForAccessibility="yes"
        android:inputType="phone"
        android:nextFocusUp="@id/idTextOrientation"
        android:nextFocusDown="@id/register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="94dp"
        android:layout_marginEnd="131dp"
        android:layout_marginBottom="586dp"
        android:contentDescription="S'inscrire sur l'application Movinder"
        android:text="S'inscrire"
        android:textAlignment="center"
        android:textColor="#7f00ff"
        android:textSize="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="253dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="440dp"
        android:contentDescription="Créez votre identifiant de connexion"
        android:drawablePadding="5dp"
        android:gravity="start"
        android:hint="Mail"
        android:importantForAccessibility="yes"
        android:inputType="text"
        android:nextFocusUp="@id/editTextNom"
        android:nextFocusDown="@id/editTextMdp"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextMdp"
        android:layout_width="298dp"
        android:layout_height="37dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="312dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="382dp"
        android:contentDescription="Créez votre mot de passe de connexion"
        android:drawablePadding="5dp"
        android:gravity="start"
        android:hint="Mot de passe"
        android:importantForAccessibility="yes"
        android:inputType="textPassword"
        android:nextFocusUp="@id/editTextMail"
        android:nextFocusDown="@id/editTextSexe"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/toggle_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="330dp"
        android:layout_marginTop="330dp"
        android:clickable="true"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextSexe"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="313dp"
        android:contentDescription="Renseignez votre adresse mail"
        android:drawablePadding="5dp"
        android:gravity="start"
        android:hint="Sexe"
        android:importantForAccessibility="yes"
        android:inputType="textEmailAddress"
        android:nextFocusUp="@id/editTextMdp"
        android:nextFocusDown="@id/idTextOrientation"
        android:textCursorDrawable="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/idTextOrientation"
        android:layout_width="297dp"
        android:layout_height="46dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="235dp"
        android:contentDescription="Orientation"
        android:ems="10"
        android:hint="Orientation"
        android:importantForAccessibility="yes"
        android:inputType="text"
        android:nextFocusUp="@id/editTextSexe"
        android:nextFocusDown="@id/editTextPhone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/register"
        android:layout_width="259dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginTop="612dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="69dp"
        android:contentDescription="Bouton pour valider son inscription"
        android:gravity="center"
        android:importantForAccessibility="yes"
        android:nextFocusUp="@id/editTextPhone"
        android:onClick="toRegister"
        android:text="Je m'inscris"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextNom"
        android:layout_width="300dp"
        android:layout_height="38dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="509dp"
        android:contentDescription="Renseignez votre nom"
        android:ems="10"
        android:focusable="true"
        android:hint="Nom"
        android:importantForAccessibility="yes"
        android:inputType="textPersonName"
        android:nextFocusDown="@id/editTextMail"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>